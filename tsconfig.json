{
    "include": ["src"],
    "exclude": ["spec", "node_modules"],
    "compilerOptions": {
        "target": "ES2019",
        "module": "CommonJS",
        "moduleResolution": "Node",
        "lib": ["ES2020"],

        "outDir": "dist",
        "declaration": false,
        "sourceMap": false,

        "strict": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noImplicitReturns": true,
        "noFallthroughCasesInSwitch": true,
        "forceConsistentCasingInFileNames": true,
        "isolatedModules": true
    }
}
